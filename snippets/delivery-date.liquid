  <div class="date-picker">
      <p>We require 2-3 business days to print and process your order</p>
      <label for="asap">
        <input type="radio" id="asap" name="attributes[DeliveryTime]" value="ASAP" checked>
        &nbsp;Please ship as soon as it’s ready
      </label>
      <label for="future">
        <input type="radio" id="future" name="attributes[DeliveryTime]" value="FUTURE">
        &nbsp;Future Date - please select the date you would like us to <u><b>ship</b></u> it on, see our shipping information
      </label>
      <div class="datepicker" id="dpFUTURE">
        <label for="date">Pick a <u><strong>ship</strong></u> date:</label>
        <input class="ddpicker" id="date" type="text" name="attributes[DropDate]" value="{{ cart.attributes.date }}"  style="border: 1px solid #d4d4d4"/>
        <!--<span style="display:block" class="instructions"> We do not deliver during the week-end.</span>-->
      </div>
  </div>

  <script>
    window.onload = function() {
      if (window.jQuery) {
        let $ = window.jQuery;

        $(function() {
          $("#date").datepicker({
            minDate: +2,
            maxDate: '+2M',
            beforeShowDay: $.datepicker.noWeekends
          });
        });ßß
      }
    }

    $(document).ready(function(){
        $("#dpFUTURE").hide();
          $("input[name$='attributes[DeliveryTime]']").click(function() {
            var val = $(this).val();
            $("#dpFUTURE").hide();
            if (val == "FUTURE"){
              $("#dp"+val).show();
            }
        });
    });
  </script>

